<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ryanbannon.iotfinalproject.PhotosActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/weightBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="right|bottom"
            android:layout_margin="10dp"
            android:background="@drawable/weight_button"
            android:clickable="true"
            android:drawableLeft="?android:attr/actionModeCloseDrawable"
            android:gravity="center"
            android:padding="12dp"
            android:text="Back to Weight Readings"
            android:textColor="#ffffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/takePhotoBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/weightBtn"
            android:layout_centerHorizontal="true"
            android:layout_gravity="right|bottom"
            android:background="@drawable/photo_button"
            android:clickable="true"
            android:drawableLeft="@android:drawable/ic_menu_camera"
            android:gravity="center"
            android:padding="12dp"
            android:layout_margin="10dp"
            android:text="Take a Photo"
            android:textColor="#ffffffff"
            android:textSize="20sp" />

        <ListView
            android:id="@+id/photos_listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/takePhotoBtn"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp">

        </ListView>

    </RelativeLayout>
</LinearLayout>
